{
 "compilerOptions": {
  "target": "ES2016",
  "module": "commonjs",
  "moduleResolution": "node",
  "strictPropertyInitialization": true,
  "sourceMap": true,
  "noImplicitAny": true,
  "noImplicitThis": true,
  "noImplicitReturns": true,
  "declaration": true,
  "outDir": "./lib",
  "strict": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "allowSyntheticDefaultImports": true
 },
 "include": ["src"],
 "exclude": ["node_modules", "**/__tests__/*"]
}
